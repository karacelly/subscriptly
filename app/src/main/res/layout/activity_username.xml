<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:flexDirection="column"
android:layout_marginHorizontal="30dp"
app:justifyContent="center"
tools:context=".UsernameActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/almost_there"
    android:fontFamily="@font/outfit"
    android:textColor="@color/primary_color"
    android:textSize="24dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/outfit"
    android:layout_marginVertical="10dp"
    android:text="@string/fill_info" />

<EditText
    android:id="@+id/fill_field_name"
    android:inputType="text"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/border"
    android:fontFamily="@font/outfit"
    android:layout_marginVertical="5dp"
    android:textSize="15dp"
    android:hint="@string/name_label"/>

<EditText
    android:id="@+id/fill_field_username"
    android:inputType="text"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/border"
    android:fontFamily="@font/outfit"
    android:layout_marginVertical="5dp"
    android:textSize="15dp"
    android:hint="@string/username_label"/>

<com.google.android.material.button.MaterialButton
    android:id="@+id/action_done_sign_in"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:backgroundTint="@color/primary_color"
    android:fontFamily="@font/outfit_light"
    android:gravity ="center"
    android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
    app:cornerRadius="15dp"
    android:textColor="@color/white"
    android:layout_marginVertical="5dp"
    android:text="@string/done_button">

</com.google.android.material.button.MaterialButton>


</com.google.android.flexbox.FlexboxLayout>