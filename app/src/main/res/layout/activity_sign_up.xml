<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexDirection="column"
    android:layout_marginHorizontal="30dp"
    app:justifyContent="center"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_string"
        android:fontFamily="@font/outfit"
        android:textColor="@color/primary_color"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="47dp"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:text="@string/sign_up_substring" />

    <EditText
        android:id="@+id/field_name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:hint="@string/name_label"/>

    <EditText
        android:id="@+id/field_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:hint="@string/username_label"/>

    <EditText
        android:id="@+id/field_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:hint="@string/email_label"/>

    <EditText
        android:id="@+id/field_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:hint="@string/password_label"/>

    <EditText
        android:id="@+id/field_confirm_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/outfit"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:hint="@string/confirm_password_label"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_sign_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:backgroundTint="@color/primary_color"
        android:textAlignment="center"
        app:cornerRadius="12dp"
        android:layout_marginVertical="5dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:text="@string/title_sign_up_activity"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit"
            android:text="@string/already_have_account"/>

        <TextView
            android:id="@+id/redirect_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/primary_color"
            android:text="@string/sign_in_button"/>
    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>